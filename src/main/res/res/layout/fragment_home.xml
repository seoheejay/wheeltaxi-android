<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_warm"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textWelcome"
        android:text="휠택시에 오신 걸 환영합니다!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textWeather"
        android:text="날씨 정보를 불러오는 중..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />
    <ImageView
        android:id="@+id/imageWeatherIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:contentDescription="날씨 아이콘" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청 내역"
        android:textColor="@color/text_main"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청 내역이 여기에 표시됩니다."
        android:textColor="@color/text_main"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@color/card_bg"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정기 예약"
        android:textColor="@color/text_main"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:elevation="2dp"/>


    <Button
        android:id="@+id/btnGoToReservation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/primary_warm"
        android:padding="12dp"
        android:textStyle="bold"
        android:text="정기 예약 관리하러 가기"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textGuardianInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보호자 정보가 없습니다."
        android:textSize="20dp"
        android:textStyle="bold"        android:padding="10dp"
        android:textColor="@color/text_main"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCallGuardian"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary_warm"
        android:text="보호자에게 전화하기"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:padding="12dp" />





</LinearLayout>
